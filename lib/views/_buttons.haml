%div{:style => "margin-left:auto;margin-right:auto;width: 960px"}
  %form
    %div{:class => "btn-group"}
      %button{:formaction => "http://mathtrade.mgpm.pl", :type => "submit", :class => "btn btn-default"}All
      - @converter.subdomains.each do |key, value|
        - if @converter.category == key.to_s
          %button{:type => "submit", :class => "btn btn-info disabled"}= value[:sub_name]
        - else
          %button{:formaction => "http://mathtrade.mgpm.pl/#{key}", :type => "submit", :class => "btn btn-info"}= value[:sub_name]