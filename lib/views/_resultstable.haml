%div{:style => "margin-left:auto;margin-right:auto;width: 960px"} 
  %table{:id => "exchanges", :class => "table"}
    %thead
    %tbody
      - @converter.exchanges.each do |item|
        %tr
          %td{:style => "vertical-align: middle", :class => "text-center", :colspan => "3"}
            %b
              = "#{item[:sends][:user_id]} got game from #{item[:item][:user_id]}:"
        %tr
          %td{:style => "vertical-align: middle", :class => "text-center"}
            %a{:href => item[:item][:desc][:url]}
              %div{:class => "row"}
                %img{:src => item[:item][:desc][:image], :style => "vertical-align:middle; width:80px; height:80px; margin:0 auto", :class => "thumbnail"}
              %div{:class => "row"}
                = "#{item[:item][:desc][:title]} (#{item[:item][:desc][:number]})"
          %td{:style => "vertical-align: middle", :class => "text-center"}
            %img{:src => "http://mathtrade.mgpm.pl/img/arrow.png", :style => "width:50px; height:50px;", :class => "img-thumbnail" }
          %td{:style => "vertical-align: middle", :class => "text-center"}
            %a{:href => item[:sends][:desc][:url]}
              %div{:class => "row"}
                %img{:src => item[:sends][:desc][:image], :style => "vertical-align:middle; width:80px; height:80px; margin:0 auto", :class => "thumbnail"}
              %div{:class => "row"}
                = "#{item[:sends][:desc][:title]} (#{item[:sends][:desc][:number]})"
