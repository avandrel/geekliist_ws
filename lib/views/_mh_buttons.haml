- @id = locals[:id]
- @config = locals[:config]
%form
  %input{:type => "hidden", :name => "id", :value => "#{@id}" }
    %button{:formmethod => "post", :formaction => "#{@config.url}list", :type => "submit", :class => "btn btn-info", :style=> "width:175px; height:30px;font-size:11px;"}= "Geeklista\n#{@config.names[@id]}"
    - if @id != @config.current_id
      %button{:type => "submit", :class => "btn btn-info disabled", :style=> "width:175px; height:30px;font-size:11px;"}= "Sprawdzarka\n#{@config.names[@id]}"
    - else
      %button{:formaction => "#{@config.url}checklist", :type => "submit", :class => "btn btn-info", :style=> "width:175px; height:30px;font-size:11px;"}= "Sprawdzarka\n#{@config.names[@id]}"
    - if @id != @config.current_id && !@config.results[@id].nil?
      %button{:formmethod => "post", :formaction => "#{@config.url}results", :type => "submit", :class => "btn btn-info", :style=> "width:175px; height:30px;font-size:11px;"}= "Wyniki\n#{@config.names[@id]}"
    - else
      %button{:type => "submit", :class => "btn btn-info disabled", :style=> "width:175px; height:30px;font-size:11px;"}= "Wyniki\n#{@config.names[@id]}"
    - if @id != @config.current_id && !@config.results[@id].nil?
      %button{:formmethod => "post", :formaction => "#{@config.url}nottraded", :type => "submit", :class => "btn btn-info", :style=> "width:175px; height:30px;font-size:11px;"}= "Niewymienione\n#{@config.names[@id]}"
